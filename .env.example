# Telegram Bot API token from @BotFather
TELEGRAM_BOT_TOKEN=

# Deepgram API key for voice transcription
DEEPGRAM_API_KEY=

# Todoist API key for task management
TODOIST_API_KEY=

# LLM provider backend: openai-cli | claude-cli | openai-api
# openai-cli uses Codex CLI auth (`codex login`), no OPENAI_API_KEY required
LLM_PROVIDER=openai-cli

# OpenAI-compatible settings (required only when LLM_PROVIDER=openai-api)
OPENAI_API_KEY=
OPENAI_MODEL=
OPENAI_BASE_URL=https://api.openai.com/v1

# Path to Obsidian vault directory
VAULT_PATH=./vault

# JSON array of Telegram user IDs allowed to use the bot
# If empty and ALLOW_ALL_USERS=false, all users are denied.
ALLOWED_USER_IDS=[123456789]

# Set true only for local testing in trusted environments
ALLOW_ALL_USERS=false

# Container runtime settings
TZ=UTC

# Scheduler expressions (used by docker scheduler service)
DAILY_CRON="0 21 * * *"
WEEKLY_CRON="0 9 * * 1"
